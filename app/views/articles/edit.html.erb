<h1>Edit the article</h1>
<%= render 'errormsg' %>

<%= form_with(model: @article, local: true) do |f| %>
	<div>
		<div>
			<%= f.label :title %> </br>
			<%= f.text_field :title %>
		</div>
		<br>
		<div>
			<%= f.label :description %> </br>
			<%= f.text_area :description %>
		</div>
		<br>
		</div>
			<%= f.submit %>
		</div>
	</div>
<% end %>